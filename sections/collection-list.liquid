{% schema %}
  {
    "name": "Jewelry Categories",
    "settings": [
      {
        "type": "header",
        "content": "General Settings"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#f5f5f5"
      },
      {
        "type": "range",
        "id": "section_padding",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Section Padding",
        "default": 60
      },
      {
        "type": "header",
        "content": "Card Settings"
      },
      {
        "type": "range",
        "id": "card_border_radius",
        "min": 0,
        "max": 30,
        "step": 1,
        "unit": "px",
        "label": "Card Border Radius",
        "default": 0
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "star_background_color",
        "label": "Star Background Color",
        "default": "#d4af37"
      }
    ],
    "blocks": [
      {
        "type": "category",
        "name": "Jewelry Category",
        "limit": 6,
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          },
          {
            "type": "text",
            "id": "category_title",
            "label": "Category Title (optional)",
            "info": "Defaults to collection title if left blank"
          },
          {
            "type": "text",
            "id": "category_description",
            "label": "Category Description",
            "default": "Beautiful pieces that add sophistication to any outfit."
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "EXPLORAR COLECCIÓN"
          },
          {
            "type": "color",
            "id": "title_color",
            "label": "Custom Title Color",
            "info": "Override the default title color for this category"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Jewelry Categories",
        "blocks": [
          {
            "type": "category",
            "settings": {
              "category_title": "Anillos",
              "category_description": "Elegantes diseños que resaltan tu estilo personal y complementan cualquier look.",
              "button_text": "EXPLORAR COLECCIÓN"
            }
          },
          {
            "type": "category",
            "settings": {
              "category_title": "Collares",
              "category_description": "Piezas deslumbrantes que enmarcan tu rostro y añaden un toque de sofisticación a cualquier atuendo.",
              "button_text": "EXPLORAR COLECCIÓN"
            }
          },
          {
            "type": "category",
            "settings": {
              "category_title": "Pulseras",
              "category_description": "Accesorios versátiles que realzan tu elegancia y complementan tu personalidad.",
              "button_text": "EXPLORAR COLECCIÓN"
            }
          }
        ]
      }
    ]
  }
{% endschema %}

<style>
.jewelry-categories {
  padding: {{ section.settings.section_padding }}px 0;
  background-color: {{ section.settings.background_color }};
}

.jewelry-categories__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20px;
}

.jewelry-category {
  position: relative;
  border-radius: {{ section.settings.card_border_radius }}px;
  overflow: hidden;
  flex: 1 1 300px;
  min-height: 400px;
  max-width: 400px;
  cursor: pointer;
  transition: transform 0.3s ease;
  display: block; /* Asegura que el elemento sea visible */
  background-color: #333; /* Color de respaldo en caso de que la imagen no cargue */
}

.jewelry-category:hover {
  transform: translateY(-5px);
}

.jewelry-category__image-container {
  position: relative;
  width: 100%;
  height: 100%;
  min-height: 400px;
  display: block; /* Asegura que el contenedor sea visible */
}

/* IMAGEN DE FONDO */
.jewelry-category__image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 0;
  display: block; /* Asegura que la imagen sea visible */
}

/* OVERLAY BASE OSCURO */
.jewelry-category__image-container::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.7));
  z-index: 1;
  display: block; /* Asegura que el overlay base sea visible */
}

/* EFECTO DORADO HOVER */
.jewelry-category__image-container::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #d4af37; /* Color dorado */
  opacity: 0;
  z-index: 2;
  transform: translateY(100%);
  transition: transform 0.4s ease, opacity 0.4s ease;
  display: block; /* Asegura que el efecto hover sea visible cuando corresponda */
}

.jewelry-category:hover .jewelry-category__image-container::after {
  transform: translateY(0);
  opacity: 0.7;
}

/* CONTENIDO */
.jewelry-category__content {
  position: absolute;
  bottom: 30px;
  left: 0;
  width: 100%;
  padding: 20px;
  text-align: {{ section.settings.text_alignment }};
  color: #ffffff;
  z-index: 3;
  transition: transform 0.3s ease;
  display: block; /* Asegura que el contenido sea visible */
}

.jewelry-category:hover .jewelry-category__content {
  transform: translateY(-10px);
}

.jewelry-category__title {
  font-size: 28px;
  font-weight: 300;
  margin-bottom: 10px;
  transition: transform 0.3s ease;
  color: {{ section.settings.title_color }};
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  display: block; /* Asegura que el título sea visible */
}

.jewelry-category__description {
  max-height: 0;
  opacity: 0;
  overflow: hidden;
  margin: 0 auto;
  max-width: 80%;
  font-size: 14px;
  line-height: 1.5;
  margin-bottom: 20px;
  transition: max-height 0.4s ease, opacity 0.4s ease;
  text-shadow: 0 1px 2px rgba(0,0,0,0.3);
}

.jewelry-category:hover .jewelry-category__description {
  max-height: 300px;
  opacity: 1;
}

.jewelry-category__button {
  display: inline-block;
  padding: 12px 24px;
  background: transparent;
  color: #ffffff;
  border: 1px solid #d4af37;
  text-decoration: none;
  text-transform: uppercase;
  font-size: 12px;
  letter-spacing: 1px;
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.jewelry-category:hover .jewelry-category__button {
  opacity: 1;
  transform: translateY(0);
}

.jewelry-category__icon {
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translateX(-50%) scale(0.8);
  width: 60px;
  height: 60px;
  background-color: {{ section.settings.star_background_color }};
  border-radius: 50%;
  opacity: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: opacity 0.3s ease, transform 0.3s ease;
  z-index: 3;
}

.jewelry-category:hover .jewelry-category__icon {
  opacity: 1;
  transform: translateX(-50%) scale(1);
}

.jewelry-category__icon svg {
  width: 24px;
  height: 24px;
}

@media screen and (max-width: 768px) {
  .jewelry-categories__container {
    flex-direction: column;
    align-items: center;
    display: flex !important; /* Forzar display flex */
    width: 100%;
  }
  
  .jewelry-category {
    max-width: 100%;
    min-height: 350px;
    display: block !important; /* Forzar display block */
    width: 100%;
    margin-bottom: 20px;
  }
  
  .jewelry-category__image-container {
    min-height: 350px;
    display: block !important; /* Forzar display block */
    position: relative !important;
  }
  
  .jewelry-category__image {
    display: block !important; /* Forzar display block */
    position: absolute !important;
    width: 100% !important;
    height: 100% !important;
  }
  
  /* Forzar visibilidad de overlays */
  .jewelry-category__image-container::before,
  .jewelry-category__image-container::after {
    display: block !important;
    position: absolute !important;
    width: 100% !important;
    height: 100% !important;
  }
  
  .jewelry-category__image-container::before {
    background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.8)) !important;
    opacity: 1 !important;
    z-index: 1 !important;
  }
  
  .jewelry-category__image-container::after {
    transform: translateY(0) !important;
    opacity: 0.15 !important;
    background-color: #d4af37 !important;
    z-index: 2 !important;
  }
  
  /* Forzar visibilidad del contenido */
  .jewelry-category__content {
    display: block !important;
    position: absolute !important;
    bottom: 30px !important;
    z-index: 10 !important; /* Aumentar z-index */
    width: 100% !important;
    padding: 20px !important;
  }
  
  .jewelry-category__title {
    display: block !important;
    font-size: 24px !important;
    margin-bottom: 10px !important;
    color: #ffffff !important;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5) !important;
  }
  
  /* Siempre mostrar descripción en móviles */
  .jewelry-category__description {
    max-height: 300px !important;
    opacity: 1 !important;
    display: block !important;
    overflow: visible !important;
    font-size: 14px !important;
    line-height: 1.5 !important;
    color: #ffffff !important;
    text-shadow: 0 1px 2px rgba(0,0,0,0.5) !important;
  }
  
  /* Siempre mostrar botón en móviles */
  .jewelry-category__button {
    opacity: 1 !important;
    transform: translateY(0) !important;
    display: inline-block !important;
    margin-top: 10px !important;
    padding: 10px 20px !important;
    background-color: rgba(212, 175, 55, 0.2) !important; /* Fondo ligeramente visible */
    border: 1px solid #d4af37 !important;
    color: #ffffff !important;
  }
  
  /* Ocultar el ícono de estrella en móviles */
  .jewelry-category__icon {
    display: none !important;
  }
}
</style>

<div class="jewelry-categories">
  <div class="jewelry-categories__container">
    {% for block in section.blocks %}
      {% if block.type == 'category' and block.settings.collection != blank %}
        {% assign collection_url = block.settings.collection.url | default: '#' %}
        <a href="{{ collection_url }}" class="jewelry-category" {{ block.shopify_attributes }}>
          <div class="jewelry-category__image-container">
            {% if block.settings.collection.image %}
              {{ block.settings.collection.image | image_url: width: 800 | image_tag: class: 'jewelry-category__image', loading: 'lazy', alt: block.settings.collection.title }}
            {% elsif block.settings.collection.products.first.featured_image %}
              {{ block.settings.collection.products.first.featured_image | image_url: width: 800 | image_tag: class: 'jewelry-category__image', loading: 'lazy', alt: block.settings.collection.title }}
            {% else %}
              {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'jewelry-category__image placeholder' }}
            {% endif %}
          </div>
          <div class="jewelry-category__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"></path>
            </svg>
          </div>
          <div class="jewelry-category__content">
            <h3 class="jewelry-category__title" {% if block.settings.title_color != blank %}style="color: {{ block.settings.title_color }};"{% endif %}>
              {{ block.settings.category_title | default: block.settings.collection.title }}
            </h3>
            <p class="jewelry-category__description">{{ block.settings.category_description }}</p>
            <span class="jewelry-category__button">
              {{ block.settings.button_text }}
            </span>
          </div>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</div>