{% schema %}
  {
    "name": "Jewelry Categories",
    "settings": [
      /* ... resto de configuraciones ... */
    ],
    "blocks": [
      /* ... bloques ... */
    ],
    "presets": [
      /* ... presets ... */
    ]
  }
  {% endschema %}
  
  <style>
  /* Estilos generales */
  .jewelry-categories {
    padding: {{ section.settings.section_padding }}px 0;
    background-color: {{ section.settings.background_color }};
  }
  
  /* ... resto de estilos ... */
  
  /* ¡SOLUCIÓN DIRECTA DEL EFECTO CORTINA! */
  /* Usamos valores fijos para garantizar que funcione */
  
  /* Este es el overlay base que siempre está presente */
  .jewelry-category__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.7));
    z-index: 1;
  }
  
  /* Esta es la cortina dorada que aparece en hover */
  .jewelry-category__gold-curtain {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #d4af37; /* Color dorado fijo */
    opacity: 0; /* Inicialmente invisible */
    transition: opacity 0.4s ease;
    z-index: 2; /* Por encima del overlay pero debajo del contenido */
  }
  
  /* ESTO ES LO QUE ACTIVA EL EFECTO CORTINA */
  .jewelry-category:hover .jewelry-category__gold-curtain {
    opacity: 0.3; /* Valor fijo de opacidad - 30% */
  }
  
  /* Mejoramos la sombra interna para dar más profundidad */
  .jewelry-category:hover .jewelry-category__overlay {
    box-shadow: inset 0 0 100px rgba(0,0,0,0.5);
  }
  
  /* Resto de estilos... */
  .jewelry-category__content {
    position: absolute;
    bottom: 30px;
    left: 0;
    width: 100%;
    padding: 20px;
    text-align: center;
    color: #ffffff;
    z-index: 3; /* Mayor z-index para que aparezca por encima de todo */
  }
  
  /* ... resto de estilos ... */
  </style>
  
  <div class="jewelry-categories">
    <div class="jewelry-categories__container">
      {% for block in section.blocks %}
        {% if block.type == 'category' %}
          {% assign collection = block.settings.collection %}
          {% if collection != blank %}
            <div class="jewelry-category" {{ block.shopify_attributes }}>
              <div class="jewelry-category__image-container">
                {% if collection.image %}
                  {{ collection.image | image_url: width: 800 | image_tag: class: 'jewelry-category__image', loading: 'lazy', alt: collection.title }}
                {% elsif collection.products.first.featured_image %}
                  {{ collection.products.first.featured_image | image_url: width: 800 | image_tag: class: 'jewelry-category__image', loading: 'lazy', alt: collection.title }}
                {% else %}
                  {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'jewelry-category__image placeholder' }}
                {% endif %}
                
                <!-- ¡IMPORTANTE! Orden de capas para el efecto -->
                <!-- 1. Primero el overlay base -->
                <div class="jewelry-category__overlay"></div>
                
                <!-- 2. Después la cortina dorada -->
                <div class="jewelry-category__gold-curtain"></div>
              </div>
              
              <!-- Estrella en todas las colecciones -->
              <div class="jewelry-category__icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"></path>
                </svg>
              </div>
              
              <div class="jewelry-category__content">
                <h3 class="jewelry-category__title" {% if block.settings.title_color != blank %}style="color: {{ block.settings.title_color }};"{% endif %}>
                  {{ block.settings.category_title | default: collection.title }}
                </h3>
                <p class="jewelry-category__description">{{ block.settings.category_description }}</p>
                <a href="{{ collection.url }}" class="jewelry-category__button">
                  {{ block.settings.button_text }}
                </a>
              </div>
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>