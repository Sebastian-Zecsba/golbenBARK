{% schema %}
  {
    "name": "Jewelry Categories",
    "settings": [
      {
        "type": "header",
        "content": "General Settings"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#f5f5f5"
      },
      {
        "type": "range",
        "id": "section_padding",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Section Padding",
        "default": 60
      },
      {
        "type": "header",
        "content": "Card Settings"
      },
      {
        "type": "range",
        "id": "card_border_radius",
        "min": 0,
        "max": 30,
        "step": 1,
        "unit": "px",
        "label": "Card Border Radius",
        "default": 0
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      },
      {
        "type": "header",
        "content": "Button Settings"
      },
      {
        "type": "color",
        "id": "button_text_color",
        "label": "Button Text Color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "button_border_color",
        "label": "Button Border Color",
        "default": "#d4af37"
      }
    ],
    "blocks": [
      {
        "type": "category",
        "name": "Jewelry Category",
        "limit": 6,
        "settings": [
          {
            "type": "image_picker",
            "id": "category_image",
            "label": "Category Image"
          },
          {
            "type": "text",
            "id": "category_title",
            "label": "Category Title",
            "default": "Category Title"
          },
          {
            "type": "text",
            "id": "category_description",
            "label": "Category Description",
            "default": "Beautiful pieces that add sophistication to any outfit."
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "EXPLORAR COLECCIÓN"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          },
          {
            "type": "color",
            "id": "overlay_color",
            "label": "Overlay Color",
            "default": "#000000"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Jewelry Categories",
        "blocks": [
          {
            "type": "category",
            "settings": {
              "category_title": "Anillos",
              "category_description": "Elegantes diseños que resaltan tu estilo personal y complementan cualquier look.",
              "button_text": "EXPLORAR COLECCIÓN"
            }
          },
          {
            "type": "category",
            "settings": {
              "category_title": "Collares",
              "category_description": "Piezas deslumbrantes que enmarcan tu rostro y añaden un toque de sofisticación a cualquier atuendo.",
              "button_text": "EXPLORAR COLECCIÓN"
            }
          },
          {
            "type": "category",
            "settings": {
              "category_title": "Pulseras",
              "category_description": "Accesorios versátiles que realzan tu elegancia y complementan tu personalidad.",
              "button_text": "EXPLORAR COLECCIÓN"
            }
          }
        ]
      }
    ]
  }
  {% endschema %}
  
  <style>
  .jewelry-categories {
    padding: {{ section.settings.section_padding }}px 0;
    background-color: {{ section.settings.background_color }};
  }
  
  .jewelry-categories__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }
  
  .jewelry-category {
    position: relative;
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
    flex: 1 1 300px;
    min-height: 400px;
    max-width: 400px;
    cursor: pointer;
    transition: transform 0.3s ease;
  }
  
  .jewelry-category:hover {
    transform: translateY(-5px);
  }
  
  .jewelry-category__image-container {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 400px;
  }
  
  .jewelry-category__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }
  
  .jewelry-category__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.7));
    opacity: 1;
    transition: opacity 0.3s ease;
  }
  
  .jewelry-category:hover .jewelry-category__overlay {
    background: linear-gradient(to bottom, rgba(0,0,0,0.4), rgba(0,0,0,0.8));
  }
  
  .jewelry-category__content {
    position: absolute;
    bottom: 30px;
    left: 0;
    width: 100%;
    padding: 20px;
    text-align: {{ section.settings.text_alignment }};
    color: #ffffff;
    z-index: 2;
  }
  
  .jewelry-category__title {
    font-size: 28px;
    font-weight: 300;
    margin-bottom: 10px;
    transition: transform 0.3s ease;
  }
  
  .jewelry-category__description {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    margin: 0 auto;
    max-width: 80%;
    font-size: 14px;
    line-height: 1.5;
    margin-bottom: 20px;
    transition: max-height 0.3s ease, opacity 0.3s ease;
  }
  
  .jewelry-category:hover .jewelry-category__description {
    max-height: 300px;
    opacity: 1;
  }
  
  .jewelry-category__button {
    display: inline-block;
    padding: 12px 24px;
    background: transparent;
    color: {{ section.settings.button_text_color }};
    border: 1px solid {{ section.settings.button_border_color }};
    text-decoration: none;
    text-transform: uppercase;
    font-size: 12px;
    letter-spacing: 1px;
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }
  
  .jewelry-category:hover .jewelry-category__button {
    opacity: 1;
    transform: translateY(0);
  }
  
  .jewelry-category__icon {
    display: none;
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 60px;
    background-color: #d4af37;
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .jewelry-category:hover .jewelry-category__icon {
    opacity: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .jewelry-category__icon svg {
    width: 24px;
    height: 24px;
  }
  
  /* Responsive adjustments */
  @media screen and (max-width: 768px) {
    .jewelry-categories__container {
      flex-direction: column;
      align-items: center;
    }
    
    .jewelry-category {
      max-width: 100%;
      min-height: 350px;
    }
    
    .jewelry-category__image-container {
      min-height: 350px;
    }
    
    .jewelry-category__description {
      max-height: none;
      opacity: 1;
    }
    
    .jewelry-category__button {
      opacity: 1;
      transform: translateY(0);
    }
  }
  </style>
  
  <div class="jewelry-categories">
    <div class="jewelry-categories__container">
      {% for block in section.blocks %}
        {% if block.type == 'category' %}
          <div class="jewelry-category" {{ block.shopify_attributes }}>
            <div class="jewelry-category__image-container">
              {% if block.settings.category_image %}
                {{ block.settings.category_image | image_url: width: 800 | image_tag: class: 'jewelry-category__image', loading: 'lazy', alt: block.settings.category_title }}
              {% else %}
                {{ 'lifestyle-2' | placeholder_svg_tag: 'jewelry-category__image placeholder' }}
              {% endif %}
              <div class="jewelry-category__overlay" style="background-color: {{ block.settings.overlay_color }}80;"></div>
            </div>
            
            {% if forloop.index == 2 %}
              <div class="jewelry-category__icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"></path>
                </svg>
              </div>
            {% endif %}
            
            <div class="jewelry-category__content">
              <h3 class="jewelry-category__title">{{ block.settings.category_title }}</h3>
              <p class="jewelry-category__description">{{ block.settings.category_description }}</p>
              {% if block.settings.button_link %}
                <a href="{{ block.settings.button_link }}" class="jewelry-category__button">
                  {{ block.settings.button_text }}
                </a>
              {% else %}
                <a href="#" class="jewelry-category__button">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>