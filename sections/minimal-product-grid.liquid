<style>
  .grid-centrado {
    justify-content: center !important;
    text-align: center;
  }

  p {
    text-align: center;
    font-family: var(--font-body-family);
    font-size: calc(var(--font-body-scale) * 1.25rem);
    line-height: 1.5;
  }

  h2 {
    text-align: center;
    font-family: var(--font-heading-family);
    font-size: calc(var(--font-heading-scale) * 3.4rem);
    font-weight: var(--font-heading-weight);
    margin: 0 0 2rem;
  }

  .collection-card {
    position: relative;
    overflow: hidden;
    border-radius: 14px;
  }

  .image-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: 14px;
  }

  .collection-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4);
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 14px;
    z-index: 2;
  }

  .image-wrapper:hover .collection-overlay {
    opacity: 1;
  }

  .collection-button {
    background: #fff;
    color: #000;
    padding: 12px 24px;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    text-transform: uppercase;
    transition: transform 0.2s ease;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  .collection-button:hover {
    background-color: #D4AF37;
    color: #fff;
    border: none; /* <-- esta línea elimina el borde feo */
    transform: translateY(-2px); /* también puedes dejar este para que suba un poco */
  }



  h3.collection-title {
    margin-top: 0.5rem;
    font-size: calc(var(--font-body-scale) * 1.8rem);
    font-family: var(--font-heading-family);
    font-weight: 500 !important;
    text-align: left;
    color: #2d322f;
    line-height: 1.75rem;
  }

  .badge {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    z-index: 3;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    text-transform: uppercase;
    pointer-events: none;
    color: white;
  }

  .badge_nuevo {
    background-color: #D4AF37;
    color: black;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    padding: 7px;
    font-size: 1rem;
  }

  .badge_oferta {
    background-color: red;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    padding: 7px;
    font-size: 1rem;
  }

  .product-price {
    font-weight: 600;
    text-align: left;
  }
</style>

<section class="product-grid py-8">
  <div class="container mx-auto px-4 w-full text-center">
    
    <h2 class="font-bold mb-8">{{ section.settings.title }}</h2>
    <p>{{ section.settings.description }}</p>
    
    <div class="">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 grid-centrado">
        {% for block in section.blocks %}
          {% assign product = all_products[block.settings.product] %}
          {% if product %}
            <div class="collection-card bg-white p-4 shadow-lg rounded-lg w-[300px]" {{ block.shopify_attributes }}>
              <a href="{{ product.url }}" class="block no-underline">
                <div class="image-wrapper mb-4" style="aspect-ratio:1/1">

                  {% if product.tags contains 'nuevo' %}
                    <span class="badge badge_nuevo">Nuevo</span>
                  {% elsif product.tags contains 'oferta' %}
                    <span class="badge badge_oferta">Oferta</span>
                  {% endif %}

                  <img 
                    src="{{ product.featured_image | image_url: width: 300, height: 300 }}" 
                    alt="{{ product.title }}" 
                    width="300"
                    height="300"
                    class="w-full h-full object-cover"
                    loading="lazy"
                  >

                  <div class="collection-overlay">
                    <button class="collection-button">
                      {{ section.settings.button-text }}
                    </button>
                  </div>
                </div>
              </a>

              <!-- Texto alineado a la izquierda -->
              <h3 class="collection-title">
                {% if block.settings.title-collection != blank %}
                  {{ block.settings.title-collection }}
                {% else %}
                  {{ product.title }}
                {% endif %}
              </h3>
              <p class="product-price">
                {{ product.price | money_without_trailing_zeros | replace: ',', '.' }} COP
              </p>

              <div class="jdgm-widget"
                   data-id="{{ product.id }}"
                   data-template="inline_reviews"
                   data-per-page="0">
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Grilla de Productos",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Productos Destacados"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Descripción",
      "default": "Nuestra selección de piezas más exclusivas, creadas con los materiales más finos y diseñadas para perdurar en el tiempo."
    },
    {
      "type": "text",
      "id": "button-text",
      "label": "Texto del Botón",
      "default": "Comprar"
    }
  ],
  "blocks": [
    {
      "type": "producto",
      "name": "Producto",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Selecciona un producto"
        },
        {
          "type": "text",
          "id": "title-collection",
          "label": "Título Personalizado",
          "default": "Selección de nombre"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grilla Centrada",
      "category": "Diseño Personalizado"
    }
  ]
}
{% endschema %}