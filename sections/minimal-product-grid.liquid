{% comment %}
  Sección de Producto Destacado con Grid de 4 Productos y Efecto Overlay Hover
{% endcomment %}

<style>
  .featured-products-section {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px 0;
  }
  
  .featured-product {
    flex: 1;
    min-width: 300px;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    background: linear-gradient(to bottom, #7d7d7d 0%, #3a3a3a 100%);
  }
  
  .featured-product-image {
    width: 100%;
    height: 500px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .featured-product-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 30px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0) 100%);
    color: #ffffff;
  }
  
  .featured-tag {
    display: inline-block;
    background-color: #D4AF37;
    color: #ffffff;
    padding: 5px 15px;
    font-size: 0.8rem;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .featured-title {
    font-size: 2rem;
    margin: 0 0 10px 0;
    font-weight: 400;
    color: #ffffff;
  }
  
  .featured-description {
    font-size: 1rem;
    margin-bottom: 15px;
    opacity: 0.9;
  }
  
  .product-rating {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }
  
  .stars {
    color: #D4AF37;
    margin-right: 10px;
  }
  
  .featured-price {
    font-size: 1.8rem;
    font-weight: bold;
    margin: 15px 0;
  }
  
  .featured-button {
    display: inline-block;
    background-color: #D4AF37;
    color: #000;
    padding: 10px 25px;
    text-transform: uppercase;
    border: none;
    border-radius: 4px;
    font-weight: bold;
    text-decoration: none;
    transition: background-color 0.3s;
  }
  
  .featured-button:hover {
    background-color: #B8860B;
  }
  
  .products-grid {
    flex: 1;
    min-width: 300px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 15px;
  }
  
  .grid-product {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    background: linear-gradient(to bottom, #e4e4e4 0%, #b3b3b3 100%);
  }
  
  .grid-product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .grid-product-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 15px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0) 100%);
    color: #ffffff;
  }
  
  .grid-product-title {
    font-size: 1.2rem;
    margin: 0 0 5px 0;
    font-weight: 400;
  }
  
  .grid-product-price {
    font-size: 1.1rem;
    font-weight: bold;
  }
  
  .sale-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: #000;
    color: #fff;
    padding: 3px 8px;
    font-size: 0.75rem;
    font-weight: bold;
  }
  
  .product-button {
    display: inline-block;
    background-color: #ffffff;
    color: #000;
    padding: 5px 15px;
    font-size: 0.8rem;
    border-radius: 4px;
    text-decoration: none;
    margin-top: 5px;
    transition: background-color 0.3s;
  }
  
  .product-button:hover {
    background-color: #f0f0f0;
  }
  
  /* Añadiendo el efecto overlay hover */
  .product-hover-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .featured-product:hover .product-hover-overlay,
  .grid-product:hover .product-hover-overlay {
    opacity: 1;
  }
  
  .hover-content {
    text-align: center;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }
  
  .featured-product:hover .hover-content,
  .grid-product:hover .hover-content {
    transform: translateY(0);
  }
  
  .hover-title {
    color: #ffffff;
    font-size: 1.2rem;
    margin-bottom: 10px;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  }
  
  .hover-button {
    background-color: #D4AF37;
    color: #000;
    border: none;
    padding: 8px 20px;
    font-weight: bold;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
  }
  
  .hover-button:hover {
    background-color: #B8860B;
  }
  
  @media (max-width: 768px) {
    .featured-products-section {
      flex-direction: column;
    }
    
    .products-grid {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto;
    }
  }
</style>

<div class="featured-products-section">
  {% assign featured_product = collections[section.settings.featured_collection].products[0] %}
  
  <div class="featured-product">
    <img 
      src="{{ featured_product.featured_image | image_url: width: '800' }}" 
      alt="{{ featured_product.title }}" 
      width="800"
      height="800"
      class="featured-product-image"
    >
    
    <!-- Overlay base con información del producto -->
    <div class="featured-product-overlay">
      <span class="featured-tag">{{ section.settings.featured_tag }}</span>
      <h2 class="featured-title">{{ featured_product.title }}</h2>
      <p class="featured-description">{{ featured_product.description | strip_html | truncatewords: 20 }}</p>
      
      {% if featured_product.metafields.custom.rating %}
        <div class="product-rating">
          <div class="stars">
            {% assign rating = featured_product.metafields.custom.rating | round %}
            {% for i in (1..5) %}
              {% if i <= rating %}
                ★
              {% else %}
                ☆
              {% endif %}
            {% endfor %}
          </div>
          <span>({{ featured_product.metafields.custom.review_count | default: '24' }})</span>
        </div>
      {% endif %}
      
      <div class="featured-price">
        {% if featured_product.compare_at_price > featured_product.price %}
          <s>{{ featured_product.compare_at_price | money }}</s>
        {% endif %}
        {{ featured_product.price | money }}
      </div>
      
      <a href="{{ featured_product.url }}" class="featured-button">{{ section.settings.button_text }}</a>
    </div>
    
    <!-- Nuevo overlay con efecto hover -->
    <div class="product-hover-overlay">
      <div class="hover-content">
        <h3 class="hover-title">{{ section.settings.hover_text }}</h3>
        <a href="{{ featured_product.url }}" class="hover-button">{{ section.settings.hover_button_text }}</a>
      </div>
    </div>
  </div>
  
  <div class="products-grid">
    {% assign grid_collection = collections[section.settings.grid_collection] %}
    {% for product in grid_collection.products limit: 4 %}
      {% if product.id != featured_product.id or section.settings.allow_duplicates %}
        <div class="grid-product">
          <img 
            src="{{ product.featured_image | image_url: width: 400 }}" 
            alt="{{ product.title }}" 
            width="400"
            height="400"
            class="grid-product-image"
          >
          
          {% if product.compare_at_price > product.price %}
            {% assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
            <span class="sale-badge">-{{ discount_percentage }}%</span>
          {% endif %}
          
          <!-- Overlay base con información del producto -->
          <div class="grid-product-overlay">
            <h3 class="grid-product-title">{{ product.title }}</h3>
            <div class="grid-product-price">
              {% if product.compare_at_price > product.price %}
                <s>{{ product.compare_at_price | money }}</s>
              {% endif %}
              {{ product.price | money }}
            </div>
            <a href="{{ product.url }}" class="product-button">VER</a>
          </div>
          
          <!-- Nuevo overlay con efecto hover -->
          <div class="product-hover-overlay">
            <div class="hover-content">
              <h3 class="hover-title">{{ section.settings.grid_hover_text }}</h3>
              <a href="{{ product.url }}" class="hover-button">{{ section.settings.hover_button_text }}</a>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Productos Destacados",
  "settings": [
    {
      "type": "text",
      "id": "featured_tag",
      "label": "Etiqueta de producto destacado",
      "default": "DESTACADO"
    },
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Colección para producto destacado"
    },
    {
      "type": "collection",
      "id": "grid_collection",
      "label": "Colección para cuadrícula de productos"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "DESCUBRIR"
    },
    {
      "type": "text",
      "id": "hover_text",
      "label": "Texto del overlay al pasar el cursor (producto destacado)",
      "default": "El Código Bravo"
    },
    {
      "type": "text",
      "id": "grid_hover_text",
      "label": "Texto del overlay al pasar el cursor (productos de cuadrícula)",
      "default": "Ver detalles"
    },
    {
      "type": "text",
      "id": "hover_button_text",
      "label": "Texto del botón en overlay hover",
      "default": "VER AHORA"
    },
    {
      "type": "checkbox",
      "id": "allow_duplicates",
      "label": "Permitir productos duplicados",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Productos Destacados",
      "category": "Productos"
    }
  ]
}
{% endschema %}