<style>
  .featured-products-section {
    display: flex;
    flex-wrap: wrap;
    gap: {{ section.settings.gap_size }}px;
    max-width: {{ section.settings.section_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.section_padding }}px 0;
  }
  
  .featured-product {
    flex: 1;
    min-width: 300px;
    position: relative;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
    background: {{ section.settings.featured_product_bg }};
    height: {{ section.settings.featured_product_height }}px;
  }
  
  .featured-product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .featured-product-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 30px;
    background: {{ section.settings.overlay_gradient }};
    color: {{ section.settings.text_color }};
    z-index: 1;
  }
  
  .featured-tag {
    display: inline-block;
    background-color: {{ section.settings.tag_bg_color }};
    color: {{ section.settings.tag_text_color }};
    padding: 5px 15px;
    font-size: {{ section.settings.tag_font_size }}rem;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .featured-title {
    font-size: {{ section.settings.title_font_size }}rem;
    margin: 0 0 10px 0;
    font-weight: {{ section.settings.title_font_weight }};
    color: {{ section.settings.title_color }};
  }
  
  .featured-description {
    font-size: {{ section.settings.description_font_size }}rem;
    margin-bottom: 15px;
    opacity: 0.9;
    color: {{ section.settings.description_color }};
  }
  
  .product-rating {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }
  
  .stars {
    color: {{ section.settings.star_color }};
    margin-right: 10px;
  }
  
  .featured-price {
    font-size: {{ section.settings.price_font_size }}rem;
    font-weight: bold;
    margin: 15px 0;
    color: {{ section.settings.price_color }};
  }
  
  .featured-button {
    display: inline-block;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: 10px 25px;
    text-transform: uppercase;
    border: none;
    border-radius: {{ section.settings.button_radius }}px;
    font-weight: bold;
    text-decoration: none;
    transition: background-color 0.3s;
  }
  
  .featured-button:hover {
    background-color: {{ section.settings.button_hover_color }};
  }
  
  .products-grid {
    flex: 1;
    min-width: 300px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: {{ section.settings.grid_gap }}px;
  }
  
  .grid-product {
    position: relative;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
    background: {{ section.settings.grid_product_bg }};
    height: {{ section.settings.grid_product_height }}px;
  }
  
  .grid-product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .grid-product-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 15px;
    background: {{ section.settings.grid_overlay_gradient }};
    color: {{ section.settings.grid_text_color }};
    z-index: 1;
  }
  
  .grid-product-title {
    font-size: {{ section.settings.grid_title_font_size }}rem;
    margin: 0 0 5px 0;
    font-weight: {{ section.settings.grid_title_font_weight }};
    color: {{ section.settings.grid_title_color }};
  }
  
  .grid-product-price {
    font-size: {{ section.settings.grid_price_font_size }}rem;
    font-weight: bold;
    color: {{ section.settings.grid_price_color }};
  }
  
  .sale-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: {{ section.settings.sale_badge_bg }};
    color: {{ section.settings.sale_badge_text }};
    padding: 3px 8px;
    font-size: 0.75rem;
    font-weight: bold;
    z-index: 2;
  }
  
  .product-button {
    display: inline-block;
    background-color: {{ section.settings.grid_button_bg }};
    color: {{ section.settings.grid_button_text_color }};
    padding: 5px 15px;
    font-size: 0.8rem;
    border-radius: {{ section.settings.button_radius }}px;
    text-decoration: none;
    margin-top: 5px;
    transition: background-color 0.3s;
  }
  
  .product-button:hover {
    background-color: {{ section.settings.grid_button_hover }};
  }
  
  /* Añadiendo el efecto overlay hover */
  .product-hover-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 2;
  }
  
  .featured-product:hover .product-hover-overlay,
  .grid-product:hover .product-hover-overlay {
    opacity: 1;
  }
  
  .hover-content {
    text-align: center;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }
  
  .featured-product:hover .hover-content,
  .grid-product:hover .hover-content {
    transform: translateY(0);
  }
  
  .hover-title {
    color: {{ section.settings.hover_text_color }};
    font-size: {{ section.settings.hover_title_size }}rem;
    margin-bottom: 10px;
    font-family: {{ section.settings.hover_font_family }};
  }
  
  .hover-button {
    background-color: {{ section.settings.hover_button_bg }};
    color: {{ section.settings.hover_button_text_color }};
    border: none;
    padding: 8px 20px;
    font-weight: bold;
    border-radius: {{ section.settings.button_radius }}px;
    cursor: pointer;
    transition: background-color 0.3s;
  }
  
  .hover-button:hover {
    background-color: {{ section.settings.hover_button_hover }};
  }
  
  .empty-product-slot {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f0f0f0;
    border-radius: 8px;
    height: 100%;
    color: #666;
    text-align: center;
    padding: 20px;
  }
  
  @media (max-width: 768px) {
    .featured-products-section {
      flex-direction: column;
    }
    
    .products-grid {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto;
    }
    
    .featured-product {
      height: {{ section.settings.mobile_featured_height }}px;
    }
    
    .grid-product {
      height: {{ section.settings.mobile_grid_height }}px;
    }
  }
</style>

<div class="featured-products-section">
  {% assign featured_product = all_products[section.settings.featured_product] %}
  
  {% if featured_product.title %}
  <div class="featured-product">
    <img 
      src="{{ featured_product.featured_image | image_url: width: 800 }}" 
      alt="{{ featured_product.title }}" 
      width="800"
      height="800"
      class="featured-product-image"
    >
    
    <!-- Overlay base con información del producto -->
    <div class="featured-product-overlay">
      <span class="featured-tag">{{ section.settings.featured_tag }}</span>
      <h2 class="featured-title">{{ featured_product.title }}</h2>
      
      {% if section.settings.show_description %}
        <p class="featured-description">{{ featured_product.description | strip_html | truncatewords: section.settings.description_word_count }}</p>
      {% endif %}
      
      {% if section.settings.show_rating and featured_product.metafields.custom.rating %}
        <div class="product-rating">
          <div class="stars">
            {% assign rating = featured_product.metafields.custom.rating | round | default: section.settings.default_rating %}
            {% for i in (1..5) %}
              {% if i <= rating %}
                ★
              {% else %}
                ☆
              {% endif %}
            {% endfor %}
          </div>
          <span>({{ featured_product.metafields.custom.review_count | default: section.settings.default_review_count }})</span>
        </div>
      {% endif %}
      
      <div class="featured-price">
        {% if featured_product.compare_at_price > featured_product.price %}
          <s>{{ featured_product.compare_at_price | money }}</s>
        {% endif %}
        {{ featured_product.price | money }}
      </div>
      
      <a href="{{ featured_product.url }}" class="featured-button">{{ section.settings.button_text }}</a>
    </div>
    
    <!-- Overlay con efecto hover -->
    {% if section.settings.show_hover_effect %}
    <div class="product-hover-overlay">
      <div class="hover-content">
        <h3 class="hover-title">{{ section.settings.hover_text }}</h3>
        <a href="{{ featured_product.url }}" class="hover-button">{{ section.settings.hover_button_text }}</a>
      </div>
    </div>
    {% endif %}
  </div>
  {% else %}
  <div class="featured-product empty-product-slot">
    <p>Selecciona un producto destacado en la configuración de la sección</p>
  </div>
  {% endif %}
  
  <div class="products-grid">
    {% assign has_blocks = false %}
    {% for block in section.blocks %}
      {% assign has_blocks = true %}
      {% assign product = all_products[block.settings.product] %}
      
      <div class="grid-product" {{ block.shopify_attributes }}>
        {% if product.title %}
          <img 
            src="{{ product.featured_image | image_url: width: 400 }}" 
            alt="{{ product.title }}" 
            width="400"
            height="400"
            class="grid-product-image"
          >
          
          {% if product.compare_at_price > product.price and section.settings.show_sale_badge %}
            {% assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
            <span class="sale-badge">-{{ discount_percentage | round }}%</span>
          {% endif %}
          
          <!-- Overlay base con información del producto -->
          <div class="grid-product-overlay">
            <h3 class="grid-product-title">{{ product.title }}</h3>
            <div class="grid-product-price">
              {% if product.compare_at_price > product.price %}
                <s>{{ product.compare_at_price | money }}</s>
              {% endif %}
              {{ product.price | money }}
            </div>
            {% if section.settings.show_grid_button %}
              <a href="{{ product.url }}" class="product-button">{{ section.settings.grid_button_text }}</a>
            {% endif %}
          </div>
          
          <!-- Overlay con efecto hover -->
          {% if section.settings.show_hover_effect %}
          <div class="product-hover-overlay">
            <div class="hover-content">
              <h3 class="hover-title">{{ block.settings.hover_text | default: section.settings.grid_hover_text }}</h3>
              <a href="{{ product.url }}" class="hover-button">{{ section.settings.hover_button_text }}</a>
            </div>
          </div>
          {% endif %}
        {% else %}
          <div class="empty-product-slot">
            <p>Selecciona un producto para este espacio</p>
          </div>
        {% endif %}
      </div>
    {% endfor %}
    
    {% unless has_blocks %}
      {% for i in (1..3) %}
        <div class="grid-product empty-product-slot">
          <p>Agrega productos en la configuración de la sección</p>
        </div>
      {% endfor %}
    {% endunless %}
  </div>
</div>

