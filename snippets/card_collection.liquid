{% comment %}
Snippet: card-collection.liquid
Muestra cada colección con overlay centrado (título + botón) con imagen ajustada y bordes limpios
{% endcomment %}

<style>
  .card-collection__button::after {
    display: none !important;
  }
  .card-collection__button:hover::after {
    display: none !important;
  }

  .card-collection__image-wrapper:hover .card-collection__overlay::before {
    content: "";
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0, 0, 0, 0.15);
    border-radius: 14px;
    z-index: 0;
  }

  .card-collection__overlay {
    position: relative;
    z-index: 1;
    transition: background 0.3s ease;
  }

  .card-collection__wrapper {
    width: 100%;
  }

  .card-collection__image-wrapper {
    position: relative;
    overflow: hidden;
    width: 100%;
    max-width: 100%;
    aspect-ratio: 1 / 1;
    height: auto;
    border-radius: 14px;
    margin: 0 auto;
  }
</style>

<div class="card-collection__wrapper">
  <div class="card-collection__image-wrapper">
    {%- if card_collection.featured_image -%}
      <img
        src="{{ card_collection.featured_image | image_url: width: 800 }}"
        alt="{{ card_collection.title }}"
        width="100%"
        height="100%"
        style="object-fit: cover; border-radius: 14px; display: block;"
      />
    {%- else -%}
      <img
        src="{{ placeholder_image | image_url: width: 800 }}"
        alt="Placeholder"
        width="100%"
        height="100%"
        style="object-fit: cover; border-radius: 14px; display: block;"
      />
    {%- endif -%}

    <!-- Overlay centrado -->
    <div class="card-collection__overlay" style="
      position: absolute;
      top: 0; left: 0;
      width: 100%; height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: rgba(0,0,0,0.4);
      border-radius: 14px;
      pointer-events: none;
    ">
      <h3 class="card-collection__title" style="
        color: #fff;
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 1rem;
        pointer-events: auto;
      ">
        {{ card_collection.title }}
      </h3>
      <a
        href="{{ card_collection.url }}"
        class="button card-collection__button"
        style="
          background-color: #fff;
          color: #000;
          padding: 0.75rem 1.5rem;
          border-radius: 12px;
          border: solid 2px #2d322f;
          box-shadow: none;
          outline: none;
          text-transform: uppercase;
          pointer-events: auto;
          transition: none;
        "
      >
        {{ 'sections.collection_list.view_all' | t }}
      </a>
    </div>
  </div>
</div>
